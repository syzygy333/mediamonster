{
  "name": "drupal-scaffold",
  "version": "1.0.0",
  "description": "A Drupal 9 scaffold project, with Webpack",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oomphinc/drupal-scaffold.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "webpack --watch --config ./webpack/webpack.dev.js",
    "build": "webpack --config ./webpack/webpack.prod.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --config=.eslintrc.json --no-eslintrc --no-error-on-unmatched-pattern \"./web/*/custom/**/*.es6.js\"",
    "lint:css": "stylelint \"./web/*/custom/**/*.pcss\"",
    "fix": "npm run fix:js && npm run fix:css",
    "fix:js": "eslint --config=.eslintrc.json --no-eslintrc --no-error-on-unmatched-pattern \"./web/*/custom/**/*.es6.js\" --fix",
    "fix:css": "stylelint \"./docroot/*/custom/**/*.pcss\" --fix",
    "format": "prettier --write \"./web/*/custom/**/*.{es6.js,pcss}\"",
    "polish": "npm run format && npm run lint"
  },
  "dependencies": {
    "@babel/core": "^7",
    "@babel/eslint-parser": "^7",
    "@babel/preset-env": "^7",
    "babel-loader": "^8",
    "babel-preset-minify": "^0.5"
  },
  "devDependencies": {
    "@ronilaukkarinen/stylelint-a11y": "^1.2.4",
    "autoprefixer": "^10",
    "clean-webpack-plugin": "^4",
    "core-js": "3",
    "css-loader": "^6",
    "eslint": "^8",
    "eslint-config-airbnb": "^19",
    "eslint-config-prettier": "^8",
    "eslint-config-unobtrusive": "^1",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-react": "^7",
    "eslint-webpack-plugin": "^3",
    "fs": "^0.0.1-security",
    "glob": "^8",
    "js-yaml-loader": "^1",
    "mini-css-extract-plugin": "^2",
    "open-cli": "^7",
    "postcss": "^8",
    "postcss-custom-media": "^8",
    "postcss-custom-properties": "^12",
    "postcss-custom-selectors": "^6",
    "postcss-easing-gradients": "^3",
    "postcss-easy-import": "^4",
    "postcss-loader": "^7",
    "postcss-media-minmax": "^5",
    "postcss-mixins": "^9",
    "postcss-nested": "^6",
    "postcss-pxtorem": "^6",
    "postcss-short-position": "^4",
    "postcss-simple-vars": "^7",
    "prettier": "^2",
    "style-loader": "^3",
    "stylelint": "^14",
    "stylelint-config-prettier": "^9",
    "stylelint-config-recommended": "^9",
    "stylelint-webpack-plugin": "^3",
    "webpack": "^5",
    "webpack-cli": "^4",
    "webpack-merge": "^5"
  }
}
