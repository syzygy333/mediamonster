{
  "extends": [
    "stylelint-config-recommended",
    "@ronilaukkarinen/stylelint-a11y",
    "stylelint-config-prettier"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "include",
          "mixin",
          "extend",
          "if",
          "else",
          "each",
          "content",
          "import",
          "function",
          "return",
          "define-mixin"
        ]
      }
    ],
    "no-descending-specificity": null,
    "a11y/media-prefers-reduced-motion": null
  }
}
